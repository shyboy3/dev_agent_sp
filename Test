from fastapi import FastAPI, UploadFile, File, Form
from fastapi.middleware.cors import CORSMiddleware

import pandas as pd
import numpy as np

# Í≥ºÌïô Ïó∞ÏÇ∞
from scipy.signal import find_peaks, savgol_filter
from scipy.optimize import curve_fit
from scipy.ndimage import label, find_objects
from skimage.feature import blob_log
import cv2

from ollama import Client 
from PIL import Image
from pdf2image import convert_from_bytes
from pptx import Presentation
from pptx.enum.shapes import MSO_SHAPE_TYPE

# --- ÏÑ§Ï†ï ---
OLLAMA_HOST = "http://127.0.0.1:11434"
ollama_client = Client(host=OLLAMA_HOST)
VISION_MODEL = "qwen3-vl:30b-a3b-instruct" 
TEXT_MODEL = "llama3:70b"

# --- V8.5 Í≥ºÌïô Ï≤òÎ¶¨ ÏóîÏßÑ ---

class ScienceProcessorV8_5:
    
    @staticmethod
    def detect_footer_boundary(img_array):
        """Î™®Îì† Ïù¥ÎØ∏ÏßÄÏóê Ï†ÅÏö© Í∞ÄÎä•Ìïú ÌïòÎã® Ï†ïÎ≥¥Î∞î Í∞êÏßÄ"""
        try:
            h, w = img_array.shape[:2]
            if h < 100 or w < 100: return None

            search_ratio = 0.25
            search_h = int(h * search_ratio)
            roi = img_array[h-search_h:, :]
            
            if len(roi.shape) == 3:
                gray = cv2.cvtColor(roi, cv2.COLOR_BGR2GRAY)
            else:
                gray = roi
                
            sobel_y = cv2.Sobel(gray, cv2.CV_64F, 0, 1, ksize=3)
            abs_sobel = np.absolute(sobel_y)
            edges = np.uint8(abs_sobel)
            
            row_sums = np.sum(edges, axis=1)
            max_val = np.max(row_sums)
            
            # Ïó£ÏßÄÍ∞Ä ÎÑàÎ¨¥ ÏïΩÌïòÎ©¥ Ìå®Ïä§
            if max_val < (w * 30): return None
                
            split_idx_roi = np.argmax(row_sums)
            if split_idx_roi > search_h * 0.98: return None # Îß® ÎÅùÏù¥Î©¥ Î¨¥Ïãú
                
            return (h - search_h) + split_idx_roi
        except:
            return None

    @staticmethod
    def process_spectrum(x, y, mode, goal):
        y_raw = y.copy()
        if mode == "None":
            peaks, _ = find_peaks(y, height=np.max(y)*0.05)
            return {"x": x, "y_raw": y, "y_proc": y, "y_base": np.zeros_like(y),
                    "peaks": [{"x": float(x[p]), "y": float(y[p])} for p in peaks], "log": ["Raw"]}

        window = 15
        if mode == "AI-Adaptive" and "noise" in goal.lower(): window = 31
        
        # Baseline (Simple Moving Min)
        baseline = pd.Series(y).rolling(window=max(5, len(y)//10), center=True).min().fillna(method='bfill').fillna(method='ffill').values
        if len(baseline) > 51: baseline = savgol_filter(baseline, 51, 3)
        
        y_proc = np.maximum(y - baseline, 0)
        if len(y_proc) > window: y_proc = savgol_filter(y_proc, window, 3)
        
        peaks, _ = find_peaks(y_proc, height=np.max(y_proc)*0.05, distance=10)

        return {"x": x, "y_raw": y_raw, "y_proc": y_proc, "y_base": baseline,
                "peaks": [{"x": float(x[p]), "y": float(y_proc[p])} for p in peaks], "log": []}

    @staticmethod
    def process_image(img_bytes, equipment, mode, goal):
        nparr = np.frombuffer(img_bytes, np.uint8)
        img_raw = cv2.imdecode(nparr, cv2.IMREAD_COLOR)
        if img_raw is None: return None, {}
        
        # 1. Universal Smart Crop (Î™®Îì† Ïù¥ÎØ∏ÏßÄÏóê ÏãúÎèÑ)
        body_img = img_raw
        footer_img = None
        split_y = ScienceProcessorV8_5.detect_footer_boundary(img_raw)
        
        if split_y:
            body_img = img_raw[:split_y, :]
            footer_img = img_raw[split_y:, :]
        
        # Ïù∏ÏΩîÎî©
        _, buf_body = cv2.imencode('.jpg', body_img)
        b64_body = base64.b64encode(buf_body).decode('utf-8')
        
        b64_footer = None
        if footer_img is not None:
            _, buf_footer = cv2.imencode('.jpg', footer_img)
            b64_footer = base64.b64encode(buf_footer).decode('utf-8')

        if mode == "None":
            return {
                "raw_b64": b64_body, "proc_b64": b64_body, "footer_b64": b64_footer,
                "stats": {"info": "Cropped Only (Raw)"}
            }

        # 2. Auto-Invert Logic (Ìù∞ Î∞∞Í≤Ω ÎåÄÏùë)
        gray = cv2.cvtColor(body_img, cv2.COLOR_BGR2GRAY)
        
        # ÌèâÍ∑† Î∞ùÍ∏∞Í∞Ä 127 Ïù¥ÏÉÅÏù¥Î©¥ Î∞ùÏùÄ Î∞∞Í≤ΩÏúºÎ°ú Í∞ÑÏ£º -> Î∞òÏ†Ñ
        is_bright_bg = np.mean(gray) > 127
        if is_bright_bg:
            gray_for_proc = cv2.bitwise_not(gray) # Î∂ÑÏÑùÏö©ÏúºÎ°úÎßå Î∞òÏ†Ñ
            bg_status = "Bright Background (Auto-Inverted)"
        else:
            gray_for_proc = gray
            bg_status = "Dark Background"

        # Denoise
        gray_blur = cv2.GaussianBlur(gray_for_proc, (5, 5), 0)
        overlay = body_img.copy()
        stats = {"bg": bg_status}

        # 3. Detection Logic
        detect_atoms = False
        detect_particles = False
        
        # ÌÇ§ÏõåÎìú Îß§Ïπ≠ (BF, Optical Îì± Ìè¨Ìï®)
        target_kwd = (equipment + " " + goal).lower()
        
        if "atom" in target_kwd or "stem" in target_kwd or "tem" in target_kwd: 
            detect_atoms = True
        if "particle" in target_kwd or "sem" in target_kwd or "optical" in target_kwd or "bf" in target_kwd: 
            detect_particles = True

        if detect_atoms:
            blobs = blob_log(gray_blur, min_sigma=3, max_sigma=15, threshold=0.1)
            for blob in blobs:
                y, x, r = blob
                cv2.circle(overlay, (int(x), int(y)), int(r*1.414), (0, 0, 255), 2)
            stats["count"] = len(blobs)
            stats["type"] = "Atoms"
            
        elif detect_particles:
            _, thresh = cv2.threshold(gray_blur, 0, 255, cv2.THRESH_BINARY + cv2.THRESH_OTSU)
            cnts, _ = cv2.findContours(thresh, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
            # Ïª®Ìà¨Ïñ¥ Í∑∏Î¶¨Í∏∞ (Îπ®Í∞ÑÏÉâ)
            cv2.drawContours(overlay, cnts, -1, (0, 0, 255), 2)
            stats["count"] = len(cnts)
            stats["type"] = "Particles"

        _, buf_proc = cv2.imencode('.jpg', overlay)
        
        return {
            "raw_b64": b64_body,
            "proc_b64": base64.b64encode(buf_proc).decode('utf-8'),
            "footer_b64": b64_footer,
            "stats": stats
        }

# --- Ìó¨Ìçº ---
def detect_excel_blocks(df):
    blocks = []
    if df.empty: return blocks
    mask = ~df.isnull().to_numpy()
    from scipy.ndimage import label, find_objects
    labeled, n = label(mask, structure=[[0,1,0],[1,1,1],[0,1,0]])
    for sl in find_objects(labeled):
        b = df.iloc[sl]
        if b.shape[0]>=3 and b.shape[1]>=2: blocks.append(b.reset_index(drop=True))
    return blocks

async def analyze_vision_ollama(image_bytes: bytes, prompt: str) -> str:
    try:
        b64 = base64.b64encode(image_bytes).decode('utf-8')
        res = await asyncio.to_thread(ollama_client.chat, model=VISION_MODEL, messages=[{'role':'user','content':prompt,'images':[b64]}])
        c = res['message']['content']
        if "<script" in c: return "Error: Blocked"
        return c
    except Exception as e: return str(e)

# --- ÎùºÏö∞ÌÑ∞ ---
app = FastAPI(title="Analyst V8.5")
app.add_middleware(CORSMiddleware, allow_origins=["*"], allow_methods=["*"], allow_headers=["*"])

@app.post("/api/analyze")
async def analyze_orchestrator(
    files: List[UploadFile] = File(...),
    file_configs: str = Form(...) 
):
    configs = json.loads(file_configs)
    print(f"üöÄ V8.5 Processing {len(configs)} files")
    
    tasks = []
    file_map = {f.filename: await f.read() for f in files}
    
    for filename, config in configs.items():
        if filename not in file_map: continue
        content = file_map[filename]
        
        eq = config.get("equipment", "General")
        goal = config.get("goal", "")
        mode = config.get("mode", "Auto")
        fname_lower = filename.lower()
        
        # [A] Document Path (No Processing)
        if eq == "Document" or fname_lower.endswith(('.pdf', '.ppt', '.pptx')):
            async def process_doc(c, n, e):
                try:
                    if n.lower().endswith('.pdf'):
                        images = convert_from_bytes(c, dpi=150, fmt='jpeg')[:10]
                        full_txt = ""
                        pages = []
                        for idx, img in enumerate(images):
                            buf = io.BytesIO()
                            img.save(buf, format="JPEG")
                            b64 = base64.b64encode(buf.getvalue()).decode()
                            desc = await analyze_vision_ollama(buf.getvalue(), "Summarize content.")
                            full_txt += f"\nPage {idx+1}: {desc}"
                            pages.append({"page_num": idx+1, "image_b64": b64, "desc": desc})
                        return {"type": "pdf", "filename": n, "equipment": "Literature", "raw_context": full_txt, "pages": pages}
                    
                    elif n.lower().endswith(('.ppt', '.pptx')):
                        prs = Presentation(io.BytesIO(c))
                        slides = []
                        full_txt = ""
                        for i, slide in enumerate(prs.slides):
                            txt = ""
                            imgs = []
                            for s in slide.shapes:
                                if hasattr(s, "text"): txt += s.text + "\n"
                                if s.shape_type == MSO_SHAPE_TYPE.PICTURE:
                                    try:
                                        iblob = s.image.blob
                                        ib64 = base64.b64encode(iblob).decode('utf-8')
                                        imgs.append({"b64": ib64, "desc": "Slide Image"})
                                    except: pass
                            full_txt += f"Slide {i+1}: {txt}\n"
                            slides.append({"slide_num": i+1, "text": txt, "images": imgs})
                        return {"type": "ppt", "filename": n, "equipment": "Literature", "raw_context": full_txt, "slides": slides}
                except Exception as e:
                    return {"type": "error", "filename": n, "msg": str(e)}
            
            tasks.append(process_doc(content, filename, eq))
            continue

        # [B] Raw Data Path
        
        # 1. Excel
        if fname_lower.endswith(('.xlsx', '.xls')):
            # (Excel Ï≤òÎ¶¨Îäî ÎèôÍ∏∞ÏãùÏúºÎ°ú Ïú†ÏßÄÌïòÍ±∞ÎÇò Î≥ÑÎèÑ Ìï®ÏàòÎ°ú Î∂ÑÎ¶¨ Í∞ÄÎä•ÌïòÏßÄÎßå, Ïó¨Í∏∞ÏÑ† ÏïàÏ†ÑÌïòÍ≤å Ï≤òÎ¶¨)
            try:
                xls = pd.ExcelFile(io.BytesIO(content))
                for sheet_name in xls.sheet_names:
                    df = pd.read_excel(xls, sheet_name=sheet_name, header=None)
                    blocks = detect_excel_blocks(df)
                    for i, block in enumerate(blocks):
                        async def process_xls_block(blk, sname, idx):
                            try:
                                num_block = blk.apply(pd.to_numeric, errors='coerce').dropna(how='all').dropna(how='all', axis=1)
                                if not num_block.empty and num_block.shape[0] > 5:
                                    x = num_block.iloc[:, 0].fillna(0).values
                                    y = num_block.iloc[:, 1].fillna(0).values
                                    res = ScienceProcessorV8_5.process_spectrum(x, y, mode, goal)
                                    
                                    step = max(1, len(x)//100)
                                    chart_data = [{"x": float(res["x"][k]), "y_proc": float(res["y_proc"][k]), "y_raw": float(res["y_raw"][k]), "y_base": float(res["y_base"][k])} for k in range(0, len(x), step)]
                                    
                                    return {
                                        "type": "spectrum", "filename": f"{filename} ({sname}-{idx+1})",
                                        "equipment": eq, "raw_context": f"Spectrum Data {eq}. Peaks: {len(res['peaks'])}",
                                        "chart_data": chart_data, "log": res["log"]
                                    }
                            except: return None
                        tasks.append(process_xls_block(block, sheet_name, i))
            except Exception as e: pass # Excel Load Error

        # 2. Image
        elif fname_lower.endswith(('.png', '.jpg', '.jpeg', '.tif', '.bmp')):
            async def process_img_v8_5(c, n, e, g, m):
                try:
                    # V8.5 Process
                    vis_res = ScienceProcessorV8_5.process_image(c, e, m, g)
                    if not vis_res: return {"type": "error", "filename": n, "msg": "Image load failed"}

                    meta_text = ""
                    if vis_res.get("footer_b64"):
                        ft_bytes = base64.b64decode(vis_res["footer_b64"])
                        meta_text = await analyze_vision_ollama(ft_bytes, "Read scale bar and text.")
                    
                    body_bytes = base64.b64decode(vis_res["proc_b64"])
                    desc = await analyze_vision_ollama(body_bytes, f"Analyze {e} image. Goal: {g}. Stats: {vis_res['stats']}.")
                    
                    return {
                        "type": "image", "filename": n, "equipment": e,
                        "summary": desc, "raw_context": f"Image: {desc}\nStats: {vis_res['stats']}\nMeta: {meta_text}",
                        "raw_b64": vis_res["raw_b64"], "proc_b64": vis_res["proc_b64"], "footer_b64": vis_res.get("footer_b64"),
                        "stats": vis_res["stats"]
                    }
                except Exception as ex: return {"type": "error", "filename": n, "msg": str(ex)}
            
            tasks.append(process_img_v8_5(content, filename, eq, goal, mode))
            
        # 3. CSV Spectrum
        elif fname_lower.endswith(('.csv', '.txt')):
             async def process_csv(c, n, e, g, m):
                try:
                    try: df = pd.read_csv(io.BytesIO(c))
                    except: df = pd.read_csv(io.BytesIO(c), delimiter='\t')
                    x = df.iloc[:, 0].values
                    y = df.iloc[:, 1].values
                    res = ScienceProcessorV8_5.process_spectrum(x, y, mode, g)
                    step = max(1, len(x)//100)
                    chart = [{"x": float(res["x"][k]), "y_proc": float(res["y_proc"][k]), "y_raw": float(res["y_raw"][k]), "y_base": float(res["y_base"][k])} for k in range(0, len(x), step)]
                    return {"type": "spectrum", "filename": n, "equipment": e, "chart_data": chart, "raw_context": f"Spectrum {e}", "log": res["log"]}
                except Exception as ex: return {"type": "error", "filename": n, "msg": str(ex)}
             tasks.append(process_csv(content, filename, eq, goal, mode))

    # [Safety Fix] Gather with return_exceptions to prevent 500 Error
    if tasks:
        results = await asyncio.gather(*tasks, return_exceptions=True)
        
        # ÌïÑÌÑ∞ÎßÅ: Exception Í∞ùÏ≤¥ÎÇò NoneÏùÑ Ï†úÍ±∞ÌïòÍ≥† Ï†ïÏÉÅÏ†ÅÏù∏ DictionaryÎßå ÎÇ®ÍπÄ
        for r in results:
            if isinstance(r, dict):
                final_results.append(r)
            elif isinstance(r, Exception):
                print(f"‚ö†Ô∏è Task Error: {r}") # Î°úÍ∑∏Ïóê ÏóêÎü¨ Ï∂úÎ†•
        
    # Synthesis
    data_ctx = ""
    lit_ctx = ""
    
    for r in final_results:
        # [Safety Fix] None Check (Ïù¥ÎØ∏ ÌïÑÌÑ∞ÎßÅÌñàÏßÄÎßå Ïù¥Ï§ë Ï≤¥ÌÅ¨)
        if r and r.get("type") != "error":
            # r.get('raw_context')Í∞Ä NoneÏùº Í≤ΩÏö∞Î•º ÎåÄÎπÑÌï¥ "" Ï≤òÎ¶¨
            raw_ctx = r.get("raw_context") or ""
            block = f"\n=== File: {r['filename']} ===\n{raw_ctx[:3000]}\n"
            
            if r.get("equipment") == "Literature": lit_ctx += block
            else: data_ctx += block
            
    final_report = "No valid data analyzed."
    if data_ctx or lit_ctx:
        try:
            prompt = "You are a Senior Scientist. Integrate Data with Literature. Write in Korean. Use Tables."
            res = await asyncio.to_thread(ollama_client.chat, model=TEXT_MODEL, messages=[{'role':'system','content':prompt}, {'role':'user','content':f"Data:\n{data_ctx}\n\nLit:\n{lit_ctx}"}])
            final_report = res['message']['content']
        except Exception as e: final_report = f"Synthesis Error: {e}"
            
    return {"results": final_results, "final_report": final_report}

if __name__ == "__main__":
    import uvicorn
    uvicorn.run(app, host="0.0.0.0", port=8000)





